<h2>Welcome to Police Occurrence Form</h2>

<p>Please, tell us what happened!</p>

<%= form_for :occurrence, url: occurrences_path do |f| %>
   
   <%= f.hidden_field :coordinate, value: "POINT(#{params[:lat]} #{params[:lng]})" %> 

  <p>
    <%= f.label :'occurrence_type:' %><br>
    <%= f.select :occurrence_type, OccurrenceType.make_drop_down %> 
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back to map', root_path %>
